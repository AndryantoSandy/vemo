<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/moviesdb?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="show_sql">true</property>
    <property name="format_sql">true</property>
    <mapping resource="vemo/model/entity/MovieCast.hbm.xml"/>
    <mapping resource="vemo/model/entity/Users.hbm.xml"/>
    <mapping resource="vemo/model/entity/Payments.hbm.xml"/>
    <mapping resource="vemo/model/entity/TransactionTypes.hbm.xml"/>
    <mapping resource="vemo/model/entity/CustomersRentals.hbm.xml"/>
    <mapping resource="vemo/model/entity/Customers.hbm.xml"/>
    <mapping resource="vemo/model/entity/Rentals.hbm.xml"/>
    <mapping resource="vemo/model/entity/Actors.hbm.xml"/>
    <mapping resource="vemo/model/entity/Accounts.hbm.xml"/>
    <mapping resource="vemo/model/entity/Genres.hbm.xml"/>
    <mapping resource="vemo/model/entity/Stores.hbm.xml"/>
    <mapping resource="vemo/model/entity/Formats.hbm.xml"/>
    <mapping resource="vemo/model/entity/Movies.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
